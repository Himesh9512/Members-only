extends layout 

block content 
    h1 Sign Up

    form(action="/sign-up", method="post")

        label(for="name") Name 
        input#name(type="text",name="name") 

        label(for="email")  Email
        input#email(type="email",name="email", required)

        label(for="password")  Password
        input#password(type="password",name="password", minLength="8", maxLength="20",  required)

        label(for="confirm-password")  Confirm password
        input#confirm-password(type="password",name="confirm-password", minLength="8", maxLength="20",  required)

        button(type="submit") Sign up

    if errors 
        ul
            for error in errors 
                li!= error.msg