extends layout 

block content 
    h1 Sign Up

    form(action="/", method="post")

        label(for="firstname") Firstname 
        input#firstname(type="text",name="firstname", required) 

        label(for="lastname") Lastname 
        input#lastname(type="text",name="lastname") 

        label(for="email")  Email
        input#email(type="email",name="email", required)

        label(for="password")  Password
        input#password(type="password",name="password", minLength="8", maxLength="20",  required)

        label(for="confirm-password")  Confirm password
        input#confirm-password(type="password",name="confirm-password", minLength="8", maxLength="20",  required)

        button(type="submit") Sign up